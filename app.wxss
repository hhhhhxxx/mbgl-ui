/**app.wxss**/
/* 图标字体 */
@import "./style/iconfont.wxss";

.weui-half-screen-dialog__ft .weui-btn {
    display: inline-block;
}


@media (prefers-color-scheme: dark) {
    page {
        background-color: #ffffff;
    }
}

page,view,text,swiper,swiper-item,image,navigator,button {
    padding: 0;
    margin: 0;
    /* box-sizing: border-box; */
}

page{
  --otherColor: #4fa3d3;
  --themeColor: #00b0f0;
  --grayText: rgb(105, 105, 105);
  font-size: 28rpx;
}

.blueBtn {
    background-color: var(--themeColor);
    color: #fff;
}


.app-container{
    width: 750rpx;
    min-height: 100vh;
    background-color: #ffffff;
    padding-bottom: 32px;
}

button {
    margin: 16px;
}

.hr {
    width: 100%;
    height: 15px;
    background-color: #f4f5f6;
}

.line {
    border: 1px solid #ccc;
    opacity: 0.2;
}

