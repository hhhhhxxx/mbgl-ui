.row {
  position: relative;
}
.row .head {
  position: relative;
  margin-right: 10px;
}
.row .head image {
  width: 50px;
  height: 50px;
  display: block;
}
.row .name {
  width: 300rpx;
}
.row .info {
  width: 300rpx;
  font-size: 13px;
  color: #888888;
}
.row .price {
  position: absolute;
  font-size: 20px;
  right: 40rpx;
  top: 50%;
  transform: translateY(-50%);
}
