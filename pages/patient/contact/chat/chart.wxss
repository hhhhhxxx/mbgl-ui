/* 发布评论 */
.input {
  background-color: #F7F7F7;
  width: 100%;
  height: 14vh;
  position: fixed;
  bottom: 0;
}
.input .inputBtn {
  position: absolute;
  width: 200rpx;
  right: 30rpx;
  height: 80rpx;
  margin: 0;
}
.app-container .right {
  display: flex;
  width: 100%;
  height: 140rpx;
  position: relative;
}
.app-container .right .top {
  margin: 20rpx;
}
.app-container .right .bot {
  position: absolute;
  left: 150rpx;
  top: 50%;
  transform: translateY(-50%);
}
.app-container .right .bot text {
  background-color: #a3a3a3;
  color: white;
}
.app-container .left {
  display: flex;
  width: 100%;
  height: 140rpx;
  position: relative;
}
.app-container .left .top {
  position: absolute;
  right: 0rpx;
  margin: 20rpx;
}
.app-container .left .bot {
  position: absolute;
  right: 150rpx;
  top: 50%;
  transform: translateY(-50%);
}
.app-container .left .bot text {
  background-color: #1aad19;
  color: white;
}
.head {
  width: 100rpx;
  height: 100rpx;
  border-radius: 10rpx;
}
.content {
  background-color: #F7F7F7;
  padding: 28rpx;
  border-radius: 20rpx;
}
.scroll-view {
  height: 86vh;
}
